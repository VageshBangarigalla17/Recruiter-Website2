<%- include('../partials/header') %>

<div class="min-h-screen bg-gray-100 flex items-center justify-center p-6">
  <div class="w-full max-w-xl bg-white rounded-2xl shadow-lg overflow-hidden">
    <!-- Header -->
    <div class="bg-white px-8 py-6 border-b border-gray-200">
      <h1 class="text-2xl font-semibold text-gray-800">Profile Settings</h1>
      <p class="text-sm text-gray-500 mt-1">Update your personal information</p>
    </div>

    <div class="px-8 py-6">
      <!-- Flash Messages -->
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
          <%= Array.isArray(success_msg) ? success_msg.join('<br>') : success_msg %>
        </div>
      <% } %>
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
          <%= error_msg %>
        </div>
      <% } %>

      <!-- Profile Form -->
      <form action="/profile" method="POST" enctype="multipart/form-data" class="space-y-6">
        <div class="flex items-center space-x-4">
          <img
            src="<%= user.avatar || 'https://res.cloudinary.com/dtpfscvr0/image/upload/v1690000000/avatars/default-user.png' %>"
            alt="Avatar"
            class="w-32 h-32 rounded-full object-cover border-2 border-gray-300"
            onerror="this.src='https://res.cloudinary.com/dtpfscvr0/image/upload/v1690000000/avatars/default-user.png'"
          />
          <div>
            <label class="block text-gray-700 font-medium">Change Avatar</label>
            <input
              type="file"
              name="avatar"
              accept="image/*"
              class="mt-1 text-sm text-gray-600"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-gray-700 font-medium mb-2">Full Name</label>
            <input
              type="text"
              name="fullName"
              value="<%= user.fullName || '' %>"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
          <div>
            <label class="block text-gray-700 font-medium mb-2">Phone</label>
            <input
              type="text"
              name="phone"
              value="<%= user.phone || '' %>"
              class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
          <div>
            <label class="block text-gray-700 font-medium mb-2">Email Address</label>
            <input
              type="email"
              value="<%= user.email %>"
              readonly
              class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-2 cursor-not-allowed"
            />
          </div>
          <div>
            <label class="block text-gray-700 font-medium mb-2">Username</label>
            <input
              type="text"
              value="<%= user.username %>"
              readonly
              class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-2 cursor-not-allowed"
            />
          </div>
        </div>

        <div class="pt-4 border-t border-gray-200">
          <button
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition-shadow duration-200 shadow-sm hover:shadow-md"
          >
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
