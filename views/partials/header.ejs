<!DOCTYPE html>
<html lang="en" x-data="{ dark: false, sidebarOpen: false }" :class="{ 'dark': dark }">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>HRMS Dashboard</title>

  <!-- Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <!-- Icons & Alpine.js -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2"></script>
  <script defer src="https://unpkg.com/heroicons@1.0.6/dist/heroicons.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" />

  <style>
    table th, table td {
      border-bottom: 1px solid #e5e7eb;
      border-right: 1px solid #e5e7eb;
      padding: 0.5rem 0.75rem;
      text-align: start;
      vertical-align: middle;
      white-space: nowrap;
    }
    table th:last-child, table td:last-child {
      border-right: none;
    }
    table tr:last-child td {
      border-bottom: none;
    }
  </style>
</head>
<body class="h-screen flex bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200 overflow-hidden">

  <!-- Sidebar -->
  <%- include('./sidebar') %>

  <!-- Main content -->
  <div class="flex-1 flex flex-col overflow-hidden">

    <!-- HEADER -->
    <header class="flex items-center justify-between bg-white dark:bg-gray-800 shadow px-4 sm:px-6 lg:px-8 py-3 motion-safe:animate-fade-in-down">
       <!-- style="height: 68px;" -->
      
      <!-- Left: Mobile menu + brand -->
      <div class="flex items-center space-x-2">
        <!-- Mobile menu button -->
        <button
          @click="sidebarOpen = true"
          class="text-gray-600 dark:text-gray-300 focus:outline-none lg:hidden transform transition hover:scale-110"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
               viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>

        <!-- Logo -->
        <a href="/" class="flex items-center transform transition">
  <img src="/assets/LOGO2.png" 
       alt="adyaHR Logo" 
       class="h-10 w-auto object-contain" />
       <img src="/assets/LOGO.png" alt="adyaHR Logo" class="h-10 w-auto object-contain" />
</a>

      </div>

      <!-- Right: Navigation links & user menu -->
      <div class="flex items-center space-x-4">
        
        <!-- Navigation Links -->
        <a href="/" class="flex items-center px-3 py-2 rounded transition transform hover:scale-105 hover:bg-gray-100 dark:hover:bg-gray-600">
          <i class="fa-solid fa-house"></i><span class="ml-2">Home</span>
        </a>

        <a href="/candidates" class="flex items-center px-3 py-2 rounded transition transform hover:scale-105 hover:bg-gray-200 dark:hover:bg-gray-700">
          <i class="fas fa-clipboard-list w-5"></i><span class="ml-2">Candidates</span>
        </a>

        <a href="/candidates/new" class="flex items-center px-3 py-2 rounded transition transform hover:scale-105 hover:bg-gray-200 dark:hover:bg-gray-700">
          <i class="fas fa-user-plus w-5"></i><span class="ml-2">Add Candidate</span>
        </a>

        <% if (user && user.role === 'admin') { %>
          <a href="/admin/recruiters" class="flex items-center px-3 py-2 rounded transition transform hover:scale-105 hover:bg-gray-200 dark:hover:bg-gray-700">
            <i class="fas fa-users w-5"></i><span class="ml-2">Recruiters</span>
          </a>
          <a href="/admin/recruiters/new" class="flex items-center px-3 py-2 rounded transition transform hover:scale-105 hover:bg-gray-200 dark:hover:bg-gray-700">
            <i class="fas fa-user-plus w-5"></i><span class="ml-2">Add Recruiter</span>
          </a>
        <% } %>

        <!-- User menu -->
        <div class="relative" x-data="{ open: false }">
          <button
            @click="open = !open"
            class="flex items-center focus:outline-none space-x-2 transform transition hover:scale-105"
          >
            <% if (user && user.avatar) { %>
              <img src="<%= user.avatar %>" alt="Avatar"
                   class="w-8 h-8 sm:w-10 sm:h-10 rounded-full object-cover border-2 border-gray-300">
            <% } else { %>
              <img src="/assets/default-avatar.png" alt="Avatar"
                   class="w-8 h-8 sm:w-10 sm:h-10 rounded-full object-cover border-2 border-gray-300">
            <% } %>
            <svg class="w-4 h-4 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor"
                 viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
              <path d="M19 9l-7 7-7-7"/>
            </svg>
          </button>

          <!-- Dropdown -->
          <div
            x-show="open"
            x-transition:enter="motion-safe:animate-scale-in"
            x-transition:leave="motion-safe:animate-fade-in-down"
            @click.away="open = false"
            class="origin-top-right absolute right-0 mt-2 w-48 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-md shadow-lg py-1 z-50"
          >
            <a href="/profile" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600">
              <i class="fa-solid fa-pen-to-square"></i><span class="ml-2">Edit Profile</span>
            </a>
            <a href="/change-password" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
              <i class="fas fa-lock w-5"></i><span class="ml-2">Change Password</span>
            </a>
            <a href="/settings" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600">
              <i class="fa-solid fa-gear"></i><span class="ml-2">Settings</span>
            </a>
            <form action="/logout" method="POST">
              <button type="submit"
                      class="w-full text-left px-4 py-2 text-red-600 hover:bg-red-100 dark:hover:bg-red-900">
                ðŸšª Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </header>

    <!-- Page content wrapper -->
    <div class="flex-1 overflow-y-auto bg-gray-50 dark:bg-gray-900 p-4 sm:p-6 lg:p-8">
