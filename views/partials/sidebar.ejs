<!-- Sidebar backdrop -->
<div
  id="sidebar-backdrop"
  x-show="sidebarOpen"
  @click="sidebarOpen = false"
  class="fixed inset-0 bg-black bg-opacity-50 z-20 lg:hidden transition-opacity duration-300 ease-in-out hidden"
></div>

<!-- Sidebar -->
<aside
  id="sidebar"
  :class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'"
  class="fixed inset-y-0 left-0 w-64 bg-white dark:bg-gray-800 shadow-lg transform transition-transform duration-300 ease-in-out z-30 lg:hidden rounded-r-2xl overflow-hidden"
>
  <!-- header -->
  <div class="p-4 border-b dark:border-gray-700 flex items-center justify-between">
    <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-200">ADHYAHR</h2>
    <button @click="sidebarOpen = false" class="text-gray-600 dark:text-gray-300 focus:outline-none transition-transform duration-200 hover:scale-110">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
           viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <path d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <!-- navigation -->
  <nav class="p-4 space-y-2 overflow-y-auto h-full">
    <a href="/" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
      <i class="fas fa-home w-5"></i><span class="ml-2">Home</span>
    </a>
    <a href="/recruiter/dashboard" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
      <i class="fas fa-tachometer-alt w-5"></i><span class="ml-2">Dashboard</span>
    </a>
    <a href="/candidates" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
      <i class="fas fa-clipboard-list w-5"></i><span class="ml-2">Candidates</span>
    </a>
    <a href="/candidates/new" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
      <i class="fas fa-user-plus w-5"></i><span class="ml-2">Add Candidate</span>
    </a>
     <% if (user && user.role === 'admin') { %>
    <a href="/admin/recruiters" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
      <i class="fas fa-users w-5"></i><span class="ml-2">Recruiters</span>
    </a>
    <a href="/admin/recruiters/new" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
      <i class="fas fa-user-plus w-5"></i><span class="ml-2">Add Recruiter</span>
    </a>
    <% } %>
    <a href="/change-password" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
      <i class="fas fa-lock w-5"></i><span class="ml-2">Change Password</span>
    </a>
    <a href="/settings" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
      <i class="fas fa-cog w-5"></i><span class="ml-2">Settings</span>
    </a>
    <a href="/help" class="flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
      <i class="fas fa-question-circle w-5"></i><span class="ml-2">Help</span>
    </a>

    <form action="/logout" method="POST">
      <button
        type="submit"
        class="w-full text-left flex items-center px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700"
      >
        <i class="fas fa-sign-out-alt w-5"></i><span class="ml-2">Logout</span>
      </button>
    </form>
  </nav>
</aside>

<!-- Sidebar toggle script -->
<script>
  function toggleSidebar() {
    const backdrop = document.getElementById('sidebar-backdrop');
    backdrop.classList.toggle('hidden');
  }
</script>
