<%- include('../partials/header') %>

<main class="flex-grow container mx-auto p-6">
  <div class="max-w-4xl mx-auto bg-white p-8 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Edit Candidate</h2>

    <form action="/candidates/<%= candidate._id %>" method="POST" enctype="multipart/form-data" class="space-y-6">
      <!-- Row 1: Date of Call & Interview Type -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Date of Call</label>
          <input
            type="date"
            name="dateOfCall"
            value="<%= candidate.dateOfCall.toISOString().slice(0,10) %>"
            required
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Interview Type</label>
          <select
            name="interviewType"
            required
            class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="" disabled>Select Interview Type</option>
            <% ['Direct','Inbound','Outbound'].forEach(opt => { %>
              <option value="<%= opt %>" <%= candidate.interviewType===opt?'selected':'' %>><%= opt %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Row 2: Client -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Client</label>
        <select
          name="client"
          required
          class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          <option value="" disabled>Select Client</option>
          <% ['Wonderla','Suzen','Digiphoto','Cospower','Pride','Chakde','Others'].forEach(c => { %>
            <option value="<%= c %>" <%= candidate.client===c?'selected':'' %>><%= c %></option>
          <% }) %>
        </select>
      </div>

      <!-- Row 3: Source Type & Source -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Source</label>
          <select
            name="sourceType"
            required
            class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="" disabled>Select Source</option>
            <% ['Walkin','Employee Referral','Job Portal','Social Media','Others'].forEach(s => { %>
              <option value="<%= s %>" <%= candidate.sourceType===s?'selected':'' %>><%= s %></option>
            <% }) %>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Source Type</label>
          <input
            type="text"
            name="source"
            value="<%= candidate.source %>"
            required
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <!-- Row 4: Candidate Name (span 2 cols) -->
      <div class="md:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-1">Candidate Name</label>
        <input
          type="text"
          name="candidateName"
          value="<%= candidate.candidateName %>"
          required
          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Row 5: Mobile & Email -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Mobile No</label>
          <input
            type="text"
            name="mobile"
            value="<%= candidate.mobile %>"
            required
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email ID</label>
          <input
            type="email"
            name="email"
            value="<%= candidate.email %>"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <!-- Row 6: Gender & Age -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Gender</label>
          <select
            name="gender"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="" disabled>Select Gender</option>
            <% ['Male','Female','Other'].forEach(g => { %>
              <option value="<%= g %>" <%= candidate.gender===g?'selected':'' %>><%= g %></option>
            <% }) %>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Age</label>
          <input
            type="number"
            name="age"
            min="15"
            value="<%= candidate.age %>"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <!-- Row 7: Location & Qualification -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Candidate Location</label>
          <input
            type="text"
            name="location"
            value="<%= candidate.location %>"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Qualification</label>
          <input
            type="text"
            name="qualification"
            value="<%= candidate.qualification %>"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <!-- Experience & Company Name -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Experience</label>
          <input
            type="text"
            name="experience"
            value="<%= candidate.experience %>"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
          <input
            type="text"
            name="companyname"
            value="<%= candidate.companyname %>"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>  
        

      <!-- Row 8: Position & Department -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Position Applied For</label>
          <input
            type="text"
            name="position"
            value="<%= candidate.position %>"
            required
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Department</label>
          <input
            type="text"
            name="department"
            value="<%= candidate.department %>"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <!-- Row 9: HR Comments (tall textarea) & HR Status -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">HR Comments</label>
          <textarea
            name="hrComments"
            rows="4"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          ><%= candidate.hrComments %></textarea>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">HR Status</label>
          <select
            name="hrStatus"
            id="hrStatus"
            required
            class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="" disabled>Select HR Status</option>
            <% ['Select','Reject','Hold','Backup'].forEach(status => { %>
              <option value="<%= status %>" <%= candidate.hrStatus===status?'selected':'' %>><%= status %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Conditional Fields -->
      <div id="conditionalFields" class="hidden border-t pt-6 mt-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Client Interview Date</label>
            <input
              type="date"
              name="clientInterviewDate"
              value="<%= candidate.clientInterviewDate ? candidate.clientInterviewDate.toISOString().slice(0,10) : '' %>"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Interview Attended</label>
            <input
              type="text"
              name="interviewAttended"
              value="<%= candidate.interviewAttended %>"
              placeholder="Yes/No"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Not Attended Comments</label>
            <input
              type="text"
              name="notAttendedComments"
              value="<%= candidate.notAttendedComments %>"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Client Status</label>
            <select
              name="clientStatus"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="" disabled>Select</option>
              <% ['Reject','Hold'].forEach(s=>{ %>
                <option value="<%= s %>" <%= candidate.clientStatus===s?'selected':'' %>><%= s %></option>
              <% }) %>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Client Comments</label>
            <input
              type="text"
              name="clientComments"
              value="<%= candidate.clientComments %>"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Final Status</label>
            <select
              name="finalStatus"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="" disabled>Select</option>
              <% ['Offer in Progress','Offered','Yet to Join','Shortlist Dropout','Offer Dropout','Joining Dropout'].forEach(st => { %>
                <option value="<%= st %>" <%= candidate.finalStatus===st?'selected':'' %>><%= st %></option>
              <% }) %>
            </select>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Comments</label>
          <textarea
            name="comments"
            rows="3"
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          ><%= candidate.comments %></textarea>
        </div>
      </div>

      <!-- Update / Cancel -->
      <div class="flex justify-end gap-4 pt-4">
        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-lg transition"
        >Update</button>
        <a
          href="/candidates"
          class="bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-2 rounded-lg transition"
        >Cancel</a>
      </div>
    </form>
  </div>
</main>

<script>
  const hrStatus = document.getElementById('hrStatus');
  const conditionalFields = document.getElementById('conditionalFields');

  function toggleFields() {
    conditionalFields.classList.toggle('hidden', hrStatus.value !== 'Select');
  }

  hrStatus.addEventListener('change', toggleFields);
  window.addEventListener('DOMContentLoaded', toggleFields);
</script>

<%- include('../partials/footer') %>
